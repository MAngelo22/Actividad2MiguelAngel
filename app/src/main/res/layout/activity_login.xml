<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:scaleType="fitXY"
        android:src="@drawable/shenron" />

    <TextView
        android:id="@+id/text2"
        style="@style/etiquetas"
        android:layout_width="match_parent"
        android:text="@string/mis_tareas"
        android:textSize="70sp"
        android:textAlignment="center"
        android:layout_marginTop="35dp"/>

    <ImageView
        android:layout_width="359dp"
        android:layout_height="263dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="23dp"
        android:src="@drawable/filtro" />

    <TextView
        android:id="@+id/usu"
        style="@style/etiquetas"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="418dp"
        android:text="@string/usuario"
        android:textAlignment="center"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/crear"
        style="@style/etiquetas"
        android:layout_width="218dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="174dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="184dp"
        android:text="@string/crear_nuevo_usuario"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/pas"
        style="@style/etiquetas"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="293dp"
        android:text="@string/password"
        android:textAlignment="center"
        android:textSize="50sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputName"
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="363dp"
        android:hint="hint"
        android:text="@string/nombre"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputPas"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="272dp"
        android:hint="hint"
        android:inputType="textPassword"
        android:text="@string/password"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="220dp"
        android:fontFamily="@font/saiyansans"
        android:background="@color/colorAccent"
        android:text="@string/login"
        android:textSize="30sp"/>

</RelativeLayout>